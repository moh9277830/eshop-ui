{
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "noEmit": true,
    "target": "ES2020",
    "module": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "types": [
      "vite/client",
    ]
  },
  "include": [
    "**/*.ts", 
    "**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
